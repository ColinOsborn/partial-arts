<div class="jumbotron">
  <h1>Categories</h1>
</div>

<% @categories.each do |category| %>
  <h2><%= category.name %></h2>
  <div class="clearfix">
    <% category.artists.each do |artist| %>
      <div class="artist">
        <img src="<%= artist.image_url %>" alt=""> <br>
        <h3><%= artist.first_name %> <%= artist.last_name %></h3>
        <p>Hometown: <%= artist.location %></p>
      </div>
    <% end %>
  </div>
<% end %>
