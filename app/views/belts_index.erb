<div class="jumbotron">
  <h1>Belts</h1>
</div>

<% @belts.each do |belt| %>
  <h2><%= belt.color.capitalize %></h2>
  <div class="belt-<%= belt.color %> clearfix">
    <% belt.artists.each do |artist| %>
      <div class="artist">
        <img src="<%= artist.image_url %>" alt=""> <br>
        <h3><%= artist.first_name %> <%= artist.last_name %></h3>
        <p>Hometown: <%= artist.location %></p>
      </div>
    <% end %>
  </div>
<% end %>
